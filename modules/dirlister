import os

repeat = False
path = "."

def p(var):
    print var

def opts(opts):
    global repeat, path
    if opts["repeat"]:
        repeat = opts[repeat]
    if opts["path"]:
        print "Setting path to ", opts[path]
        path = opts[path]

def run(*args):
        print "[*] Dirlister fired up"
        print args
        return str(os.listdir("."))
