import os

repeat = False
path = "."

def p(var):
    print var

def opts(opts):
    print opts
    global repeat, path
    if opts["repeat"]:
        repeat = opts["repeat"]
    if opts["dir"]:
        print "Setting path to ", opts["dir"]
        path = opts["dir"]

def run(*args):
        print "[*] Dirlister fired up"
        print args
        return str(os.listdir("."))
